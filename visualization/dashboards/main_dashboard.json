{
  "dashboard": {
    "title": "ColdTrack - Main Dashboard",
    "uid": "coldtrack-main",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Current Temperature",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "influxdb",
              "uid": "influxdb"
            },
            "query": "from(bucket: \"sensors\")\n  |> range(start: -1m)\n  |> filter(fn: (r) => r._measurement == \"sensor_data\")\n  |> filter(fn: (r) => r._field == \"temperature\")\n  |> last()"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "blue"},
                {"value": 0, "color": "red"},
                {"value": 2, "color": "yellow"},
                {"value": 8, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Temperature Over Time",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 18,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "influxdb",
              "uid": "influxdb"
            },
            "query": "from(bucket: \"sensors\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"sensor_data\")\n  |> filter(fn: (r) => r._field == \"temperature\")\n  |> aggregateWindow(every: v.windowPeriod, fn: mean, createEmpty: false)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "spanNulls": false,
              "thresholdsStyle": {
                "mode": "area"
              }
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 2, "color": "yellow"},
                {"value": 8, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Humidity",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "influxdb",
              "uid": "influxdb"
            },
            "query": "from(bucket: \"sensors\")\n  |> range(start: -1m)\n  |> filter(fn: (r) => r._measurement == \"sensor_data\")\n  |> filter(fn: (r) => r._field == \"humidity\")\n  |> last()"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 30, "color": "yellow"},
                {"value": 50, "color": "green"},
                {"value": 80, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Battery Level",
        "type": "gauge",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "influxdb",
              "uid": "influxdb"
            },
            "query": "from(bucket: \"sensors\")\n  |> range(start: -1m)\n  |> filter(fn: (r) => r._measurement == \"sensor_data\")\n  |> filter(fn: (r) => r._field == \"battery\")\n  |> last()"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "orange"},
                {"value": 20, "color": "yellow"},
                {"value": 50, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Alert History",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "influxdb",
              "uid": "influxdb"
            },
            "query": "from(bucket: \"sensors\")\n  |> range(start: -24h)\n  |> filter(fn: (r) => r._measurement == \"sensor_data\")\n  |> filter(fn: (r) => r._field == \"temperature\")\n  |> filter(fn: (r) => r._value < 2.0 or r._value > 8.0)"
          }
        ]
      }
    ]
  },
  "overwrite": true
}
