{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "iot:Connect"
      ],
      "Resource": [
        "arn:aws:iot:*:*:client/${iot:ClientId}"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Publish"
      ],
      "Resource": [
        "arn:aws:iot:*:*:topic/coldtrack/sensors/*/data",
        "arn:aws:iot:*:*:topic/coldtrack/sensors/*/alerts"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Subscribe"
      ],
      "Resource": [
        "arn:aws:iot:*:*:topicfilter/coldtrack/sensors/*/commands",
        "arn:aws:iot:*:*:topicfilter/coldtrack/sensors/*/config"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iot:Receive"
      ],
      "Resource": [
        "arn:aws:iot:*:*:topic/coldtrack/sensors/*/commands",
        "arn:aws:iot:*:*:topic/coldtrack/sensors/*/config"
      ]
    }
  ]
}
