# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCOUNT_ID=your_account_id_here
IOT_ENDPOINT=your_iot_endpoint.iot.eu-west-2.amazonaws.com

# InfluxDB Configuration
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=coldtrack-super-secret-token-change-in-production
INFLUX_ORG=coldtrack
INFLUX_BUCKET=sensors
INFLUX_USERNAME=admin
INFLUX_PASSWORD=coldtrack2024

# Temperature Thresholds (Celsius)
TEMP_MIN=2.0
TEMP_MAX=8.0
FREEZE_ALERT_THRESHOLD=0.0

# Battery Thresholds (Percentage)
BATTERY_LOW_THRESHOLD=20.0
BATTERY_CRITICAL_THRESHOLD=10.0

# Humidity Thresholds (Percentage)
HUMIDITY_MIN=30.0
HUMIDITY_MAX=80.0

# Alert Configuration
ALERT_EMAIL=your_email@example.com
ALERT_PHONE=+447XXXXXXXXX
SNS_TOPIC_ARN=arn:aws:sns:eu-west-2:your_account:coldtrack-alerts

# Device Configuration
DEFAULT_DEVICE_ID=CT-001
MQTT_TOPIC_PREFIX=coldtrack/sensors
PUBLISH_INTERVAL=60

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Lambda Configuration
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=256

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
